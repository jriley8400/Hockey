<h1>Editing <%= @team.name %></h1>

<form action="/teams/<%= @team.id %>/update">
  <div>
    <label for="name">Name</label><br />
    <input id="name" name="name" value="<%= @team.name  %>" type="text" />
  </div>
  <div>  
    <label for="coach">Coach</label><br />
    <input id="coach" name="coach" value="<%= @team.coach  %>" type="text" />
  </div>
  <div>
    <label for="bio">Bio</label><br />
    <textarea id="bio" name="bio" type="text" cols="40" rows="4"><%= @team.bio %></textarea>
  </div>
    <div>  
    <label for="image_url">Image</label><br />
    <input id="image_url" name="image_url" value="<%= @team.image_url  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


